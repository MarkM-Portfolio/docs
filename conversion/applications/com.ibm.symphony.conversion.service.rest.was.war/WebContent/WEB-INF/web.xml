<web-app id="WebApp_ID" version="2.4" xmlns="http://java.sun.com/xml/ns/j2ee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd">
	<display-name>com.ibm.symphony.conversion.service.rest.was.war</display-name>
	<listener>
		<display-name>PlatformInitializer</display-name>
		<listener-class>com.ibm.conversion.service.rest.servlet.PlatformInitializer</listener-class>
	</listener>		
	<filter>
		<filter-name>HttpSettingsFilter</filter-name>
		<filter-class>com.ibm.conversion.service.rest.filter.HttpSettingsFilter</filter-class>
	</filter>
    <filter-mapping>
		<filter-name>HttpSettingsFilter</filter-name>
		<url-pattern>/ConversionService</url-pattern>
	</filter-mapping>
    <filter-mapping>
		<filter-name>HttpSettingsFilter</filter-name>
		<url-pattern>/ConversionResult</url-pattern>
	</filter-mapping>
	<servlet>
		<description>
		</description>
		<display-name>
		ConversionServlet</display-name>
		<servlet-name>ConversionServlet</servlet-name>
		<servlet-class>
		com.ibm.conversion.service.rest.servlet.ConversionServlet</servlet-class>
		<load-on-startup>1</load-on-startup>
	</servlet>
	<servlet>
		<description>
		</description>
		<display-name>
		ConversionResultServlet</display-name>
		<servlet-name>ConversionResultServlet</servlet-name>
		<servlet-class>
		com.ibm.conversion.service.rest.servlet.ConversionResultServlet</servlet-class>
	</servlet>
	<servlet>
		<description>
		</description>
		<display-name>
		ConversionLoginServlet</display-name>
		<servlet-name>ConversionLoginServlet</servlet-name>
		<servlet-class>
		com.ibm.conversion.service.rest.servlet.ConversionLoginServlet</servlet-class>
	</servlet>
    <servlet>
        <servlet-name>ConversionVersionServlet</servlet-name>
        <servlet-class>com.ibm.conversion.service.rest.servlet.ConversionVersionServlet</servlet-class>
    </servlet>	
	<servlet-mapping>
		<servlet-name>ConversionServlet</servlet-name>
		<url-pattern>/ConversionService</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>ConversionResultServlet</servlet-name>
		<url-pattern>/ConversionResult</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>ConversionLoginServlet</servlet-name>
		<url-pattern>/login</url-pattern>
	</servlet-mapping>
    <servlet-mapping>
        <servlet-name>ConversionVersionServlet</servlet-name>
        <url-pattern>/version</url-pattern>
    </servlet-mapping>	
	<welcome-file-list>
		<welcome-file>index.html</welcome-file>
		<welcome-file>index.htm</welcome-file>
		<welcome-file>index.jsp</welcome-file>
		<welcome-file>default.html</welcome-file>
		<welcome-file>default.htm</welcome-file>
		<welcome-file>default.jsp</welcome-file>
	</welcome-file-list>
    <security-constraint>
        <web-resource-collection>
            <web-resource-name>Login URL</web-resource-name>
            <url-pattern>/login</url-pattern>
			<http-method>GET</http-method>
			<http-method>POST</http-method>	
        </web-resource-collection>
        <auth-constraint>
			<description>allAuthenticatedUsers user role for all authenticated users</description>
            <role-name>allAuthenticatedUsers</role-name>
        </auth-constraint>
    </security-constraint>  	
    <security-role>
  		<description>Authenticated Users</description>
  		<role-name>allAuthenticatedUsers</role-name>
  	</security-role>
	<resource-ref id="ResourceRef_1310377797696">
		<description>
		</description>
		<res-ref-name>com/ibm/symphony/conversion/workmanager</res-ref-name>
		<res-type>com.ibm.websphere.asynchbeans.WorkManager</res-type>
		<res-auth>Container</res-auth>
		<res-sharing-scope>Shareable</res-sharing-scope>
	</resource-ref>
</web-app>
