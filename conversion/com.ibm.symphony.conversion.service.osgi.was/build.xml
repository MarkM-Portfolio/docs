<project name="com.ibm.symphony.conversion.service.osgi.was" basedir="." default="deploy">
	<property name="src.dir" value="src"/>
	<property name="bin.dir" value="bin"/>
	<property name="classes.dir" value="${bin.dir}/classes"/>
	<property name="jar.dir" value="${bin.dir}/jar"/>
	
	<path id="project.classpath">
		<pathelement path="${build.home}/com.ibm.symphony.conversion.service_${build.version}_${build.timestamp}.jar"/>
	</path>
	
	<path id="was.classpath">
		<fileset dir="${was.home}" includes="**/*.jar"/>
	</path>
	
	<target name="clean">
		<delete dir="${bin.dir}"/>
	</target>
	<target name="compile" depends="clean">
		<mkdir dir="${classes.dir}"/>
		<javac srcdir="${src.dir}" destdir="${classes.dir}" debug="${build.debug}" debuglevel="${build.debuglevel}" source="${javac.source}" target="${javac.target}">
			<classpath refid="project.classpath"/>
			<classpath refid="was.classpath"/>
		</javac>
	</target>
	
	<target name="gather" depends="compile">
		<copy todir="${classes.dir}" failonerror="true" overwrite="true">
	   		<fileset dir="${src.dir}">
      			<exclude name="**/*.java"/>
    		</fileset>
		</copy>		 
	</target>

	<target name="jar" depends="gather">
		<mkdir dir="${jar.dir}"/>
		<zip destfile="${jar.dir}/${ant.project.name}_${build.version}_${build.timestamp}.jar" basedir="${classes.dir}">
   			<zipfileset dir="META-INF" prefix="META-INF"/>
			<zipfileset dir="." includes="plugin.xml"/>
		</zip>
	</target>
	<target name="deploy" depends="jar">
		<copy todir="${build.home}">
			<fileset dir="${jar.dir}"/>
		</copy>
	</target>
</project>

