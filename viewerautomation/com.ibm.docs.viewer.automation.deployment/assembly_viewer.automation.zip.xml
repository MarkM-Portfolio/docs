<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
  <id>DocsApp.zip</id>
  <formats>
    <format>zip</format>
  </formats>
  <includeBaseDirectory>false</includeBaseDirectory>
  <fileSets>
    <fileSet>
      <directory>${project.basedir}</directory>
      <outputDirectory>./installer</outputDirectory>
      <excludes>
        <exclude>assembly_viewer.automation.zip.xml</exclude>
        <exclude>target/</exclude>
      </excludes>
    </fileSet>
    <fileSet>
      <directory>../com.ibm.docs.viewer.automation/src/com/ibm/docs/viewer/automation/config/</directory>
      <outputDirectory>./com.ibm.docs.viewer.automation</outputDirectory>
      <includes>
	   	<include>config.json</include>
        <include>config_sc.json</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>../com.ibm.docs.viewer.automation</directory>
      <outputDirectory>./com.ibm.docs.viewer.automation</outputDirectory>
      <includes>
	   	<include>samples/</include>
      </includes>
    </fileSet>       
  </fileSets>
  <files>
    <file>
      <source>../com.ibm.docs.viewer.automation.war/src/com/ibm/docs/viewer/automation/proxy.json</source>
    </file>
  </files>  
  <dependencySets>
    <dependencySet>
      <useProjectArtifact>false</useProjectArtifact>
      <outputDirectory>./</outputDirectory>
      <includes>
        <include>com.ibm.docs:com.ibm.docs.viewer.automation.ear</include>
      </includes>
      <outputFileNameMapping>${artifact.artifactId}.${artifact.extension}</outputFileNameMapping>
    </dependencySet>
    <dependencySet>
      <useProjectArtifact>false</useProjectArtifact>
      <outputDirectory>./com.ibm.docs.viewer.automation</outputDirectory>
      <includes>
        <include>com.ibm.docs:com.ibm.docs.viewer.automation</include>
      </includes>
      <outputFileNameMapping>${artifact.artifactId}.${artifact.extension}</outputFileNameMapping>
    </dependencySet>    
  </dependencySets>   

</assembly>