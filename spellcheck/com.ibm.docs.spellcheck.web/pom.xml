<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <!-- Project Information -->
  <parent>
    <groupId>com.ibm.docs</groupId>
    <artifactId>spellcheck</artifactId>
    <version>1.0-SNAPSHOT</version>
    <relativePath>../pom.xml</relativePath>
  </parent>

  <artifactId>com.ibm.docs.spellcheck.web</artifactId>
  <name>com.ibm.docs.spellcheck.web - jar</name>
  <packaging>jar</packaging>

  <dependencies>
    <!-- Project dependencies -->   
    <dependency>
      <groupId>com.ibm.docs</groupId>
      <artifactId>com.ibm.docs.spellcheck.service</artifactId>
      <version>${project.version}</version>
    </dependency>
    
    <!-- 3rd party dependencies -->
    <dependency>
      <groupId>javax.ws.rs</groupId>
      <artifactId>jsr311-api</artifactId>
    </dependency>
    <dependency>
      <groupId>com.sun.jersey</groupId>
      <artifactId>jersey-client</artifactId>
    </dependency>
    <dependency>
      <groupId>com.sun.jersey</groupId>
      <artifactId>jersey-core</artifactId>
    </dependency>
    <!-- IBM product -->
    <dependency>
      <groupId>com.ibm</groupId>
      <artifactId>com.ibm.rcp.spellcheck.remote</artifactId>
    </dependency>   

    <!-- WAS lib dependencies -->
    <dependency>
      <groupId>com.ibm.websphere.lib</groupId>
      <artifactId>j2ee</artifactId>
    </dependency>
  </dependencies>

  <build>
    <plugins>
      <plugin>
        <artifactId>maven-assembly-plugin</artifactId>
        <executions>
          <execution>
            <id>Build com.ibm.docs.spellcheck.web bundle</id>
            <phase>package</phase>
            <goals>
              <goal>single</goal>
            </goals>
            <configuration>
              <descriptors>
                <descriptor>assembly_com.ibm.docs.spellcheck.web.xml</descriptor>
              </descriptors>
              <archiverConfig>
              <manifestFile>${project.basedir}/META-INF/MANIFEST.MF</manifestFile>
              <!--  <manifest>${project.basedir}/META-INF/MANIFEST.MF</manifest>  -->           
              </archiverConfig>
              <archive>
                <addMavenDescriptor>false</addMavenDescriptor>
                <manifest>                      
                    <addDefaultImplementationEntries>false</addDefaultImplementationEntries>
                    <addDefaultSpecificationEntries>false</addDefaultSpecificationEntries>
                    <addClasspath>false</addClasspath>
                </manifest>
              </archive>
              <finalName>${project.artifactId}_${build.smartcloud.version}_${docs.build.timestamp}</finalName>
              <appendAssemblyId>false</appendAssemblyId>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
</project>