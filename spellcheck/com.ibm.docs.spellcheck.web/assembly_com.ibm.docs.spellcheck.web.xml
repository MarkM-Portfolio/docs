<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
  <id>com.ibm.docs.spellcheck.web</id>
  <formats>
    <format>jar</format>
  </formats>
  <includeBaseDirectory>false</includeBaseDirectory>
  <fileSets>  
    <fileSet>
      <directory>${project.build.directory}/classes</directory>
      <includes>
        <include>**/*</include>
      </includes>
      <outputDirectory>./</outputDirectory>
    </fileSet>
  </fileSets>
  <files>
    <file>
      <source>${project.basedir}/plugin.xml</source>
    </file>
  </files>
  <dependencySets>
    <dependencySet>
      <outputDirectory>lib/</outputDirectory>
      <includes>
        <!-- jar flies -->
        <include>com.ibm.docs:com.ibm.docs.spellcheck.service</include>
      </includes>
      <outputFileNameMapping>${artifact.artifactId}.${artifact.extension}</outputFileNameMapping>
    </dependencySet>
    <dependencySet>
      <outputDirectory>lib/</outputDirectory>
      <includes>
        <!-- jar flies -->
        <include>com.sun.jersey:jersey-client</include>
        <include>com.sun.jersey:jersey-core</include>
        <include>javax.ws.rs:jsr311-api</include>
      </includes>
    </dependencySet>      
  </dependencySets>   

</assembly>