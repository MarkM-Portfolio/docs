<project name="com.ibm.docs.spellcheck.service" basedir="." default="deploy">
	<property name="src.dir" value="src" />
	<property name="bin.dir" value="bin" />
	<property name="classes.dir" value="${bin.dir}/classes" />
	<property name="jar.dir" value="${bin.dir}/jar" />

	<path id="lib.classpath">
		<pathelement path="${basedir}/lib/jsr311-api-1.1.1.jar" />
	</path>

	<target name="clean">
		<delete dir="${bin.dir}/jar" />
	</target>
	<target name="compile" depends="clean">
		<mkdir dir="${classes.dir}" />
		<javac srcdir="${src.dir}" destdir="${classes.dir}" debug="${build.debug}" debuglevel="${build.debuglevel}" source="1.6" target="1.6">
			<classpath refid="lib.classpath" />
		</javac>
	</target>
	<target name="jar" depends="compile">
		<pathconvert property="manifest.lib.classpath" pathsep=" ">
			<mapper>
				<chainedmapper>
					<flattenmapper />
					<globmapper from="*" to="lib/*" />
				</chainedmapper>
			</mapper>
			<path refid="lib.classpath" />
		</pathconvert>
		<mkdir dir="${jar.dir}" />
		<unzip src="${basedir}/classes.zip" dest="${basedir}/"/>
		<copy todir="${classes.dir}">
			<fileset dir="${basedir}/classes/" includes="**/*.class"/>
		</copy>
		<jar destfile="${jar.dir}/${ant.project.name}.jar" basedir="${classes.dir}">
			<manifest>
				<attribute name="Created-By" value="IBM" />
				<attribute name="Class-Path" value="${manifest.lib.classpath}" />
			</manifest>
		</jar>
		<delete dir="${basedir}/classes/"/>
	</target>
	<target name="deploy" depends="jar">
		<copy todir="${build.home}">
			<fileset dir="${jar.dir}"/>
		</copy>
	</target>
</project>

