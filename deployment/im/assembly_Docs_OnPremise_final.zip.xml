<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
  <id>assembly_Docs_OnPremise_final.zip</id>
  <formats>
    <format>zip</format>
  </formats>
  <includeBaseDirectory>false</includeBaseDirectory>
  <fileSets>
    <fileSet>
      <directory>${project.build.directory}/cic.output.repository</directory>
      <outputDirectory>./IBMConnectionsDocs-repo</outputDirectory>
      <excludes>
        <exclude>repository.config</exclude>
        <exclude>repository.xml</exclude>
        <exclude>Offerings/</exclude>
      </excludes>
    </fileSet>
    <fileSet>
      <directory>${project.build.directory}/im.build/com.ibm.docs.installer</directory>
      <outputDirectory>./IBMConnectionsDocs-repo</outputDirectory>
      <includes>
        <include>upgrade/</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>${deployment.dir}/setupdb</directory>
      <outputDirectory>./SetupDB</outputDirectory>
    </fileSet>
  </fileSets>
</assembly>
