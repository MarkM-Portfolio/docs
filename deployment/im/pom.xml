<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <!-- Project Information -->
  <parent>
    <groupId>com.ibm.docs</groupId>
    <artifactId>deployment</artifactId>
    <version>1.0-SNAPSHOT</version>
    <relativePath>../pom.xml</relativePath>
  </parent>

  <artifactId>com.ibm.docs.im</artifactId>
  <name>com.ibm.docs.im - pom</name>
  <packaging>pom</packaging>

  <properties>
    <BUILD_HOME>${project.basedir}</BUILD_HOME>
    <native.dir>${project.build.directory}/im.build/com.ibm.docs.installer/native</native.dir>
  </properties>
  
  <dependencies>
    <dependency>
      <groupId>com.ibm.docs.OnPremise</groupId>
      <artifactId>DocsApp</artifactId>
      <version>${project.version}</version>
      <type>zip</type>   
    </dependency>
    <dependency>
      <groupId>com.ibm.docs.OnPremise</groupId>
      <artifactId>DocsConversion</artifactId>
      <version>${project.version}</version>
      <type>zip</type>   
    </dependency>
    <dependency>
      <groupId>com.ibm.docs.OnPremise</groupId>
      <artifactId>DocsLCExtension</artifactId>
      <version>${project.version}</version>
      <type>zip</type>   
    </dependency>
    <dependency>
      <groupId>com.ibm.docs.OnPremise</groupId>
      <artifactId>DocsProxyFilter</artifactId>
      <version>${project.version}</version>
      <type>zip</type>   
    </dependency>
    <dependency>
      <groupId>com.ibm.docs.OnPremise</groupId>
      <artifactId>Viewer</artifactId>
      <version>${project.version}</version>
      <type>zip</type>
    </dependency> 
    <dependency>
      <groupId>com.ibm.docs.OnPremise</groupId>
      <artifactId>ViewerLCCustomizeApp</artifactId>
      <version>${project.version}</version>
      <type>zip</type>   
    </dependency>     
  </dependencies>

  <!-- Only run on Linux. -->
  <profiles>
    <profile>
      <id>unix</id>
      <activation>
        <os>
          <family>unix</family>
        </os>
      </activation>   
      <build>
        <plugins>
          <plugin>
            <groupId>org.apache.maven.plugins</groupId>
            <artifactId>maven-dependency-plugin</artifactId>
            <executions>
              <execution>
                <id>copy Docs zip file</id>
                <phase>prepare-package</phase>
                <goals>
                  <goal>copy</goal>
                </goals>
                <configuration>
                  <stripVersion>true</stripVersion>
                  <artifactItems>
                    <artifactItem>
                      <groupId>com.ibm.docs.OnPremise</groupId>
                      <artifactId>DocsApp</artifactId>
                      <type>zip</type>
                      <overWrite>true</overWrite>
                      <outputDirectory>${native.dir}</outputDirectory>
                    </artifactItem>
                    <artifactItem>
                      <groupId>com.ibm.docs.OnPremise</groupId>
                      <artifactId>DocsConversion</artifactId>
                      <type>zip</type>
                      <overWrite>true</overWrite>
                      <outputDirectory>${native.dir}</outputDirectory>
                    </artifactItem>
                    <artifactItem>
                      <groupId>com.ibm.docs.OnPremise</groupId>
                      <artifactId>DocsLCExtension</artifactId>
                      <type>zip</type>
                      <overWrite>true</overWrite>
                      <outputDirectory>${native.dir}</outputDirectory>
                    </artifactItem>
                    <artifactItem>
                      <groupId>com.ibm.docs.OnPremise</groupId>
                      <artifactId>DocsProxyFilter</artifactId>
                      <type>zip</type>
                      <overWrite>true</overWrite>
                      <outputDirectory>${native.dir}</outputDirectory>
                    </artifactItem>
                    <artifactItem>
                      <groupId>com.ibm.docs.OnPremise</groupId>
                      <artifactId>Viewer</artifactId>
                      <type>zip</type>
                      <overWrite>true</overWrite>
                      <outputDirectory>${native.dir}</outputDirectory>
                    </artifactItem>
                    <artifactItem>
                      <groupId>com.ibm.docs.OnPremise</groupId>
                      <artifactId>ViewerLCCustomizeApp</artifactId>
                      <type>zip</type>
                      <overWrite>true</overWrite>
                      <outputDirectory>${native.dir}</outputDirectory>
                    </artifactItem>                  
                  </artifactItems>
                  <overWriteReleases>false</overWriteReleases>
                  <overWriteSnapshots>true</overWriteSnapshots>
                </configuration>
              </execution>
            </executions>        
          </plugin>
	      <plugin>
	       <groupId>org.apache.maven.plugins</groupId>
	       <artifactId>maven-antrun-plugin</artifactId>
	        <executions>
	          <execution>
	    	    <id>chmod</id>
	    	    <phase>prepare-package</phase>
	    	    <goals>
	    	     <goal>run</goal>
	    	    </goals>
	    	    <configuration>
                  <target>
	    	        <exec osfamily="unix" executable="/bin/chmod">
	    	            <arg line="+x"/>
	    	        	<arg line="${basedir}/build4maven.sh"/>
	    	        </exec>
	    	      </target>
	    	    </configuration>
	          </execution>
	        </executions>
	      </plugin>       
          <plugin>
            <groupId>org.codehaus.mojo</groupId>  
            <artifactId>exec-maven-plugin</artifactId>  
            <executions>
              <execution>
                <id>build com.ibm.docs.im</id>
                <phase>package</phase>
                <goals>
                  <goal>exec</goal>
                </goals>
                <configuration>  
                  <executable>${project.basedir}/build4maven.sh</executable>
                  <workingDirectory>${project.basedir}</workingDirectory>
                  <environmentVariables>
                    <BUILD_HOME>${project.basedir}</BUILD_HOME>
                    <BUILD_OUTPUT>${project.build.directory}</BUILD_OUTPUT>
                    <JAVA_HOME>${PDEV_ECLIPSE_HOME2}/jdk</JAVA_HOME>
                    <VERSION>${build.onpremise.version}</VERSION>
                  </environmentVariables>
                  <!-- build script will report warnings, workaround to not block Maven build -->
                  <!--
                  <successCodes>
                    <successCode>0</successCode>
                    <successCode>1</successCode>
                  </successCodes>-->
                </configuration>
              </execution>       
            </executions>
          </plugin>
          <plugin>
            <artifactId>maven-assembly-plugin</artifactId>
            <executions>
              <execution>
                <id>assembly_Docs_OnPremise_final.zip.xml</id>
                <phase>package</phase>
                <goals>
                  <goal>single</goal>
                </goals>
                <configuration>
                  <descriptors>
                    <descriptor>assembly_Docs_OnPremise_final.zip.xml</descriptor>
                  </descriptors>
                  <finalName>${product.number}</finalName>
                  <appendAssemblyId>false</appendAssemblyId>
                </configuration>            
              </execution>
            </executions>
          </plugin>          
          <plugin>
            <artifactId>maven-install-plugin</artifactId>
            <executions>
              <execution>
                <id>install IM package</id>
                <phase>install</phase>
                <goals>
                  <goal>install-file</goal>
                </goals>
                <configuration>
                  <file>${project.build.directory}/${product.number}.zip</file>
                  <groupId>com.ibm.docs</groupId>
                  <artifactId>com.ibm.docs.im</artifactId>
                  <packaging>zip</packaging>
                  <version>${project.version}</version>    
                </configuration>            
              </execution>
            </executions>
          </plugin>          
        </plugins>
      </build>
    </profile>
  </profiles>      
</project>