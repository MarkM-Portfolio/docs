<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
  <id>ViewerLCCustomizeApp.zip</id>
  <formats>
    <format>zip</format>
  </formats>
  <includeBaseDirectory>false</includeBaseDirectory>
  <fileSets>
    <fileSet>
      <directory>${viewer.lcfiles.ext.deployment.resources.dir}</directory>
      <outputDirectory>./</outputDirectory>
      <includes>
        <include>config/</include>
	   	<include>installer/</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>${license.dir}</directory>
      <outputDirectory>./</outputDirectory>
      <includes>
	   	<include>License/</include>
      </includes>
    </fileSet>      
    <fileSet>
      <directory>${python.file}</directory>
      <outputDirectory>installer/Python</outputDirectory>
    </fileSet>     
  </fileSets>
  <dependencySets>
    <dependencySet>
      <useProjectArtifact>false</useProjectArtifact>
      <outputDirectory>./</outputDirectory>
      <includes>
        <include>com.ibm.docs.OnPremise:Viewer_LC35_OSGIExtension</include>
        <include>com.ibm.docs:com.ibm.concord.viewer.lcfiles.daemon</include>
      </includes>
      <outputFileNameMapping>${artifact.artifactId}.${artifact.extension}</outputFileNameMapping>
    </dependencySet>
    <dependencySet>
      <useProjectArtifact>false</useProjectArtifact>
      <outputDirectory>./installer</outputDirectory>
      <includes>
        <include>${project.groupId}:viewer-ext-version.txt</include>
      </includes>
      <outputFileNameMapping>version.txt</outputFileNameMapping>
    </dependencySet>      
  </dependencySets>
</assembly>