<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
  <id>DocsProxyFilter.zip</id>
  <formats>
    <format>zip</format>
  </formats>
  <includeBaseDirectory>false</includeBaseDirectory>
  <fileSets>
    <fileSet>
      <directory>${proxyfilter.deployment.resources.dir}</directory>
      <outputDirectory>./</outputDirectory>
      <includes>
	   	<include>installer/</include>
      </includes>
      <excludes>
        <exclude>**/ut/</exclude>
	    <exclude>**/ut.py</exclude>
      </excludes>
    </fileSet>
    <fileSet>
      <directory>${common.deployment.resources.dir}</directory>
      <outputDirectory>./</outputDirectory>
      <includes>
	   	<include>installer/</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>${license.dir}</directory>
      <outputDirectory>./</outputDirectory>
      <includes>
	   	<include>License/</include>
      </includes>
    </fileSet>
  </fileSets>
  <dependencySets>
    <dependencySet>
      <useProjectArtifact>false</useProjectArtifact>
      <outputDirectory>./</outputDirectory>
      <includes>
        <include>com.ibm.docs:concord.proxy.filter</include>
        <include>com.ibm.docs:com.ibm.docs.proxy.lotuslive.saml</include>
      </includes>
      <outputFileNameMapping>${artifact.artifactId}.${artifact.extension}</outputFileNameMapping>
    </dependencySet>
    <dependencySet>
      <useProjectArtifact>false</useProjectArtifact>
      <outputDirectory>./opensaml</outputDirectory>
      <includes>
        <include>commons-configuration:commons-configuration</include>
        <include>commons-lang:commons-lang</include>
        <include>org.slf4j:slf4j-api</include>
        <include>org.owasp.esapi:esapi</include>
        <include>joda-time:joda-time</include>
        <include>org.slf4j:log4j-over-slf4j</include>
        <include>org.opensaml:opensaml</include>
        <include>org.opensaml:openws</include>
        <include>org.apache.velocity:velocity</include>
        <include>org.apache.santuario:xmlsec</include>
        <include>org.opensaml:xmltooling</include>
        <include>commons-io:commons-io</include>
        <include>commons-httpclient:commons-httpclient</include>
        <include>com.ibm:json4j</include>
        <include>org.bouncycastle145:bcprov</include>
        <include>jline:jline</include>
        <include>com.google.guava:guava</include>
        <include>org.apache.zookeeper:zookeeper</include>
        <include>org.apache.curator:curator-client</include>
        <include>org.apache.curator:curator-framework</include>
        <include>org.apache.curator:curator-recipes</include>
        <include>com.ibm:registryLib</include>
        <include>com.ibm:zooKeeperLib</include>
        <include>com.ibm:JSON4J_Apache</include>
      </includes>
    </dependencySet>
    <dependencySet>
      <useProjectArtifact>false</useProjectArtifact>
      <outputDirectory>./installer</outputDirectory>
      <includes>
        <include>com.ibm.docs.SmartCloud:proxy-version.txt</include>
      </includes>
      <outputFileNameMapping>version.txt</outputFileNameMapping>
    </dependencySet>    
  </dependencySets>   

</assembly>