<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
  <id>DocsProxyFilter.zip</id>
  <formats>
    <format>zip</format>
  </formats>
  <includeBaseDirectory>false</includeBaseDirectory>
  <fileSets>
    <fileSet>
      <directory>${proxyfilter.deployment.resources.dir}</directory>
      <outputDirectory>./</outputDirectory>
      <includes>
	   	<include>installer/</include>
      </includes>
      <excludes>
        <exclude>**/ut/</exclude>
	    <exclude>**/ut.py</exclude>
      </excludes>
    </fileSet>
    <fileSet>
      <directory>${common.deployment.resources.dir}</directory>
      <outputDirectory>./</outputDirectory>
      <includes>
	   	<include>installer/</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>${license.dir}</directory>
      <outputDirectory>./</outputDirectory>
      <includes>
	   	<include>License/</include>
      </includes>
    </fileSet><!--     
    <fileSet>
      <directory>${project.build.directory}</directory>
      <outputDirectory>installer</outputDirectory>
      <includes>
        <include>cfg*.sample</include>
      </includes>
    </fileSet>    -->
  </fileSets>
  <dependencySets>
    <dependencySet>
      <useProjectArtifact>false</useProjectArtifact>
      <outputDirectory>./</outputDirectory>
      <includes>
        <include>com.ibm.docs:concord.proxy.filter</include>
      </includes>
      <outputFileNameMapping>${artifact.artifactId}.${artifact.extension}</outputFileNameMapping>
    </dependencySet>
    <dependencySet>
      <useProjectArtifact>false</useProjectArtifact>
      <outputDirectory>./installer</outputDirectory>
      <includes>
        <include>com.ibm.docs.OnPremise:proxy-version.txt</include>
      </includes>
      <outputFileNameMapping>version.txt</outputFileNameMapping>
    </dependencySet>      
  </dependencySets>   

</assembly>