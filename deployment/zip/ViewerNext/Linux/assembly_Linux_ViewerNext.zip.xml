<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
  <id>ViewerNext.zip</id>
  <formats>
    <format>zip</format>
  </formats>
  <includeBaseDirectory>false</includeBaseDirectory>
  
  <!-- Viewer -->
  <fileSets>
    <fileSet>
      <directory>${viewer.deployment.resources.dir}</directory>
      <outputDirectory>./Viewer</outputDirectory>
      <includes>
	   	<include>installer/</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>${license.dir}</directory>
      <outputDirectory>./Viewer</outputDirectory>
      <includes>
	   	<include>License/</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>${python.file}</directory>
      <outputDirectory>./Viewer/installer/Python</outputDirectory>
    </fileSet>
    
    <!-- Conversion -->
    <fileSet>
      <directory>${project.build.directory}</directory>
      <outputDirectory>./</outputDirectory>
      <includes>
	   	<include>Conversion/</include>
      </includes>
    </fileSet>
    <!-- Conversion -->    
    
    <!-- shared lib for VN only -->
    <fileSet>
      <directory>${project.build.directory}</directory>
      <outputDirectory>./Viewer/sharedlib</outputDirectory>
      <includes>
	   	<include>com.ibm.concord.viewer.sharedlib*.jar</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>${project.build.directory}</directory>
      <outputDirectory>./Viewer/sharedlib</outputDirectory>
      <includes>
	   	<include>commons-configuration-*.jar</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>${project.build.directory}</directory>
      <outputDirectory>./Viewer/sharedlib</outputDirectory>
      <includes>
	   	<include>commons-lang-*.jar</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>${project.build.directory}/com.ibm.concord.viewer.platform/native</directory>
      <outputDirectory>./Viewer/sharedlib</outputDirectory>
      <includes>
	   	<include>*.dll</include>
      </includes>
    </fileSet>
    <!-- shared lib for VN only -->
    <!-- shared lib for gatekeeper -->
    <fileSet>
      <directory>${project.build.directory}</directory>
      <outputDirectory>./Viewer/sharedlib</outputDirectory>
      <includes>
	   	<include>com.ibm.concord.viewer.gatekeeper*.jar</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>${project.build.directory}</directory>
      <outputDirectory>./Viewer/sharedlib</outputDirectory>
      <includes>
	   	<include>json4j-*.jar</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>${project.build.directory}</directory>
      <outputDirectory>./Viewer/sharedlib</outputDirectory>
      <includes>
	   	<include>bcprov-*.jar</include>
      </includes>
    </fileSet>
   <fileSet>
      <directory>${project.build.directory}</directory>
      <outputDirectory>./Viewer/sharedlib</outputDirectory>
      <includes>
	   	<include>registerLib-*.jar</include>
      </includes>
    </fileSet><fileSet>
      <directory>${project.build.directory}</directory>
      <outputDirectory>./Viewer/sharedlib</outputDirectory>
      <includes>
	   	<include>shared.gatekeeper-*.jar</include>
      </includes>
    </fileSet><fileSet>
      <directory>${project.build.directory}</directory>
      <outputDirectory>./Viewer/sharedlib</outputDirectory>
      <includes>
	   	<include>zookeeper-*.jar</include>
      </includes>
    </fileSet><fileSet>
      <directory>${project.build.directory}</directory>
      <outputDirectory>./Viewer/sharedlib</outputDirectory>
      <includes>
	   	<include>slf4j-api-*.jar</include>
      </includes>
    </fileSet>
    <!-- shared lib for gatekeeper -->
  </fileSets>
  <files> 
    <file>
      <source>${viewer.deployment.resources.dir}/config/directory.services.xml</source>
      <outputDirectory>./Viewer/config</outputDirectory>
      <destName>directory.services.xml</destName>
    </file>
    <file>
      <source>${viewer.deployment.resources.dir}/config/directory.services.xsd</source>
      <outputDirectory>./Viewer/config</outputDirectory>
      <destName>directory.services.xsd</destName>
    </file>
    <file>
      <source>${viewer.deployment.resources.dir}/config/viewer-config-sc-template.json</source>
      <outputDirectory>./Viewer/config</outputDirectory>
    </file>
    <file>
      <source>${viewer.deployment.resources.dir}/config/viewernext-config-sc-template.json</source>
      <outputDirectory>./Viewer/config</outputDirectory>
      <destName>viewer-config-premise-template.json</destName>
    </file>    
  </files>
  
  <dependencySets>
    <dependencySet>
      <useProjectArtifact>false</useProjectArtifact>
      <outputDirectory>./Viewer</outputDirectory>
      <includes>
        <include>com.ibm.docs.ViewerVerse:com.ibm.concord.viewer.ear</include>
        <include>com.ibm.docs:com.ibm.docs.viewer.sanity.ear</include>
      </includes>
      <outputFileNameMapping>${artifact.artifactId}.${artifact.extension}</outputFileNameMapping>
    </dependencySet>
    <dependencySet>
      <useProjectArtifact>false</useProjectArtifact>
      <outputDirectory>./Viewer/installer</outputDirectory>
      <includes>
        <include>com.ibm.docs.SmartCloud:ViewerVerseInstaller-version.txt</include>
      </includes>
      <outputFileNameMapping>version.txt</outputFileNameMapping>
    </dependencySet>     
  </dependencySets>  
</assembly>