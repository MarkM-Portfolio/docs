<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
  <id>DocsApp.zip</id>
  <formats>
    <format>zip</format>
  </formats>
  <includeBaseDirectory>false</includeBaseDirectory>
  <fileSets>
    <fileSet>
      <directory>${docsapp.deployment.resources.dir}</directory>
      <outputDirectory>./</outputDirectory>
      <includes>
        <include>config/</include>
	   	<include>installer/</include>
      </includes>
      <excludes>
        <exclude>**/ut/</exclude>
	    <exclude>**/ut.py</exclude>
      </excludes>
    </fileSet>
    <fileSet>
      <directory>${common.deployment.resources.dir}</directory>
      <outputDirectory>./</outputDirectory>
      <includes>
	   	<include>installer/</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>${license.dir}</directory>
      <outputDirectory>./</outputDirectory>
      <includes>
	   	<include>License/</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>${docs.help.dir}</directory>
      <outputDirectory>./</outputDirectory>
      <includes>
	   	<include>com.hcl.docs.help.ear</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>${project.build.directory}</directory>
      <outputDirectory>installer</outputDirectory>
      <includes>
        <include>cfg*.sample</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>${python.file}</directory>
      <outputDirectory>installer/Python</outputDirectory>
    </fileSet>
  </fileSets>
  <dependencySets>
    <dependencySet>
      <useProjectArtifact>false</useProjectArtifact>
      <outputDirectory>./</outputDirectory>
      <includes>
        <include>com.ibm.docs.OnPremise:com.ibm.concord.ear</include>
        <include>com.ibm.docs.OnPremise:com.ibm.docs.spellcheck.ear</include>
        <include>com.ibm.docs:com.ibm.docs.web.resources.ear</include>
        <include>com.ibm.docs:DocsApp_Plugins</include>
      </includes>
      <outputFileNameMapping>${artifact.artifactId}.${artifact.extension}</outputFileNameMapping>
    </dependencySet>
    <dependencySet>
      <useProjectArtifact>false</useProjectArtifact>
      <outputDirectory>./</outputDirectory>
      <includes>
        <include>com.ibm.docs:IBMDocsSanity</include>
      </includes>
      <outputFileNameMapping>com.ibm.docs.sanity.ear</outputFileNameMapping>
    </dependencySet>
    <dependencySet>
      <useProjectArtifact>false</useProjectArtifact>
      <outputDirectory>installer/util</outputDirectory>
      <includes>
        <include>com.ibm.docs:com.ibm.docs.deployment</include>
      </includes>
      <outputFileNameMapping>${artifact.artifactId}.${artifact.extension}</outputFileNameMapping>
    </dependencySet>
    <dependencySet>
      <useProjectArtifact>false</useProjectArtifact>
      <outputDirectory>./installer</outputDirectory>
      <includes>
        <include>${project.groupId}:docs-version.txt</include>
      </includes>
      <outputFileNameMapping>version.txt</outputFileNameMapping>
    </dependencySet>
  </dependencySets>

</assembly>
