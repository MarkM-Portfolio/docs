<project name="repackage_native_linux.zip" default="repackage_native_linux.zip">
  <target name="repackage_native_linux.zip">       
    <echo message="1. unzip native.zip"/>
    <unzip src="${basedir}/../../target/native.zip" dest="${project.build.directory}/native"/>
    
    <echo message="2. delete ooxmlconvertor for SC"/>   
    <delete includeemptydirs="true" failonerror="false">
      <fileset dir="${project.build.directory}/native/conversionlib" includes="OOXMLConvertor.exe,currentBuildLabel.txt"></fileset>
    </delete>
    
    <echo message="3. repackage native.zip for SC"/>   
    <zip destfile="${project.build.directory}/native.zip">
	  <fileset dir="${project.build.directory}/native"/>
	</zip>  
    
  </target>
</project>
