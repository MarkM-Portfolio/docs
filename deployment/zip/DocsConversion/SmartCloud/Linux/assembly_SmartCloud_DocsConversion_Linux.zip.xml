<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
  <id>DocsConversion.zip</id>
  <formats>
    <format>zip</format>
  </formats>
  <includeBaseDirectory>false</includeBaseDirectory>
  <fileSets>
    <fileSet>
      <directory>${conversion.deployment.resources.dir}</directory>
      <outputDirectory>./</outputDirectory>
      <includes>
	   	<include>installer/</include>
        <include>config/</include>
        <include>config/</include>
      </includes>
      <excludes><!-- Does Conversion need these file?
        <exclude>**/ut/</exclude>
	    <exclude>**/ut.py</exclude>-->
        <exclude>installer/installCF.bat</exclude>
        <exclude>installer/interface.xml</exclude>
        <exclude>installer/product/</exclude>
      </excludes>
    </fileSet>
    <fileSet>
      <directory>${common.deployment.resources.dir}</directory>
      <outputDirectory>./</outputDirectory>
      <includes>
	   	<include>installer/</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>${license.dir}</directory>
      <outputDirectory>./</outputDirectory>
      <includes>
	   	<include>License/</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>${project.build.directory}</directory>
      <outputDirectory>./</outputDirectory>
      <includes>
	   	<include>native.zip</include>
      </includes>
    </fileSet>    
    <fileSet>
      <directory>${project.parent.parent.build.directory}</directory>
      <outputDirectory>./</outputDirectory>
      <includes>
        <!--<include>${build.ftp.oo_remotefilename}</include>-->
        <include>${build.ftp.linux_oo_remotefilename}</include>
		<!-- <include>org.oracle.oiexport.win32_x64.zip</include> -->
      </includes>
    </fileSet>
    <fileSet>
      <directory>${python.file}</directory>
      <outputDirectory>installer/Python</outputDirectory>
    </fileSet>
  </fileSets>
  <dependencySets>
    <dependencySet>
      <useProjectArtifact>false</useProjectArtifact>
      <outputDirectory>./</outputDirectory>
      <includes>
        <include>com.ibm.docs:com.ibm.symphony.conversion.service.rest.was.ear</include>
      </includes>
      <outputFileNameMapping>${artifact.artifactId}.${artifact.extension}</outputFileNameMapping>
    </dependencySet>
    <dependencySet>
      <useProjectArtifact>false</useProjectArtifact>
      <outputDirectory>./</outputDirectory>
      <includes>
        <include>com.ibm.docs:IBMConversionSanity</include>
      </includes>
      <outputFileNameMapping>com.ibm.docs.sanity.ear</outputFileNameMapping>
    </dependencySet>
    <dependencySet>
      <useProjectArtifact>false</useProjectArtifact>
      <outputDirectory>./installer</outputDirectory>
      <includes>
        <include>${project.parent.groupId}:conversion-version.txt</include>
      </includes>
      <outputFileNameMapping>version.txt</outputFileNameMapping>
    </dependencySet>     
  </dependencySets>  

</assembly>