<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <!-- Project Information -->
  <parent>
    <groupId>com.ibm.docs</groupId>
    <artifactId>deployment</artifactId>
    <version>1.0-SNAPSHOT</version>
    <relativePath>../pom.xml</relativePath>
  </parent>

  <artifactId>rpm</artifactId>
  <name>rpm - pom</name>
  <packaging>pom</packaging>
 
  <!-- Modules -->
  <modules>
    <module>com.ibm.docs.db.rpm</module>
    <module>com.ibm.docs.dmz.cron.rpm</module>
    <module>com.ibm.docs.dmz.rpm</module>
    <module>com.ibm.docs.rpm</module>
    <module>com.ibm.docs.sanity.rpm</module>
    <module>com.ibm.docs.viewer.ext.rpm</module>
    <module>com.ibm.viewernext.webseal.config</module>
    <module>com.ibm.viewernext.rpm</module>
    <!--
    <module>middleware.dmz.70.rpm</module>
    <module>middleware.dmz.fixpack7011.rpm</module>-->
  </modules>

  <properties>
    <build.rpm.command>${project.basedir}/buildRpm</build.rpm.command>
    <checkError>false</checkError>
    <rpm.file.name>${rpm.file.prefix}-${build.smartcloud.version}-${docs.build.timestamp}.x86_64.rpm</rpm.file.name>
    <rpm.file>${project.build.directory}/RPMS/x86_64/${rpm.file.name}</rpm.file>
  </properties>

  <!-- Only run RPM on Linux. -->
  <profiles>
    <profile>
      <id>isBuildRpmDir</id>
      <activation>
        <os>
          <family>unix</family>
        </os>
        <file>
          <exists>${basedir}/rpm.spec</exists>
        </file>
      </activation> 
      <build>
        <plugins>
          <plugin>
            <groupId>org.apache.maven.plugins</groupId>
            <artifactId>maven-resources-plugin</artifactId>
            <executions>
              <execution>
                <id>copy rpm files</id>
                <phase>validate</phase>
                <goals>
                  <goal>copy-resources</goal>
                </goals>
                <configuration>
                  <outputDirectory>${project.build.directory}</outputDirectory>
                   <includeEmptyDirs>true</includeEmptyDirs>
                  <resources>
                    <resource>
                      <directory>${project.basedir}</directory>
                      <filtering>false</filtering>
                      <includes>
                        <include>files/**/*</include>
                        <include>buildRpm</include>
                        <include>rpm.spec</include>
                        <include>interface.xml</include>
                      </includes>          
                    </resource>
                  </resources>               
                </configuration>            
              </execution>          
            </executions>
          </plugin>
          <plugin>
            <groupId>org.codehaus.mojo</groupId>
            <artifactId>build-helper-maven-plugin</artifactId>
            <executions>
              <execution>
                <id>regex-property</id>
                <goals>
                  <goal>regex-property</goal>
                </goals>
                <configuration>
                  <name>rpm.timestamp</name>
                  <value>${docs.build.timestamp}</value>
                  <regex>-</regex>
                  <replacement></replacement>
                  <failIfNoMatch>false</failIfNoMatch>
                </configuration>
              </execution>
            </executions>
          </plugin>            
          <plugin>
            <groupId>org.apache.maven.plugins</groupId>
            <artifactId>maven-antrun-plugin</artifactId>
            <executions>
              <execution>
                <id>create timestamp.tmp</id>
                <phase>package</phase>
                <configuration>
                  <target>
                    <echo message="docs.build.timestamp: ${docs.build.timestamp} rpm.timestamp:  ${rpm.timestamp}"/>
                    <replace file ="${project.build.directory}/rpm.spec" token="@@@version@@@" value="${build.smartcloud.version}"/>
                    <replace file ="${project.build.directory}/rpm.spec" token="@@@timestamp@@@" value="${rpm.timestamp}"/>

                    <exec executable="chmod">
                      <arg value="+x"/>
                      <arg value="${build.rpm.command}"/>
                    </exec>
                    <exec executable="chmod" failonerror="${checkError}">
                        <arg value="755"/>
	    	        	<arg value="-R"/>
                        <arg value="${project.build.directory}/files"/>
                    </exec>
                    <!-- do not break build before enable RPM totally -->
                    <exec executable="bash" failonerror="${checkError}" >
                        <arg line="${build.rpm.command} -basedir ${project.build.directory} -timestamp"/>
                    </exec>
                  </target>             
                </configuration>
                <goals>
                  <goal>run</goal>
                </goals>
              </execution>
            </executions>
          </plugin><!--
          <plugin>
            <artifactId>maven-install-plugin</artifactId>
            <executions>
              <execution>
                <id>install RPMs to Maven local repository</id>
                <phase>install</phase>
                <goals>
                  <goal>install-file</goal>
                </goals>
                <configuration>
                  <file>${rpm.file}</file>
                  <groupId>${project.groupId}</groupId>
                  <artifactId>${rpm.file.name}</artifactId>
                  <packaging>rpm</packaging>
                  <version>${project.version}</version>    
                </configuration>            
              </execution>
            </executions>
          </plugin>-->       
        </plugins>
      </build>
    </profile>   
  </profiles>     
  
</project>