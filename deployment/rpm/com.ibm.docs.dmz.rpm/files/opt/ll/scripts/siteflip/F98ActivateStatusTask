import re,sys,os,subprocess,socket,shutil,distutils,time
sys.path.append('/opt/ll/lib/registry')
sys.path.append('/opt/ll/lib/apache/zookeeper')
from registryLib import *
from zooKeeperLib import *

#---------------------------------------------------------------------------------------------
# Main
#---------------------------------------------------------------------------------------------

#Initialize objects
registryParser = RegistryParser()
zooKeeperClient = ZooKeeperClient()

baseTopologyName = registryParser.getBaseTopologyName()
topologyName = registryParser.getTopologyName()

isDocsMA = registryParser.getSetting('Docs','is_docs_multiactive')
print 'is Docs multiactive %s' % (isDocsMA)

routingPolicy = registryParser.getSetting('Docs', 'docsrp_routing_policy')
print 'Docs routing policy is %s' % (routingPolicy)

if (isDocsMA == "true" or routingPolicy == "dynamic"):
  zooKeeperClient.updateActivationStatus('Start to set data center/side %s phase to flipping' % (topologyName))
  print 'Start to set data center/side %s phase to flipping' % (topologyName)
  
  try:
    phasePath = '/' + baseTopologyName + '/data/docs/data/' + topologyName + '/phase'  
    zooKeeperClient.setData(phasePath, 'flipping')
    print 'Set data center/side %s phase to flipping successfully' % (topologyName) 
  except:
    zooKeeperClient.updateActivationStatus('Error while set phase to flipping')
    print('Error while set phase to flipping')
    sys.exit(-1)
    
  zooKeeperClient.updateActivationStatus('Set data center/side %s phase to flipping successfully' % (topologyName))
  
  



