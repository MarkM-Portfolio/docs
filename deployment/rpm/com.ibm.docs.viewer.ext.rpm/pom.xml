<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <!-- Project Information -->
  <parent>
    <groupId>com.ibm.docs</groupId>
    <artifactId>rpm</artifactId>
    <version>1.0-SNAPSHOT</version>
    <relativePath>../pom.xml</relativePath>
  </parent>

  <artifactId>com.ibm.docs.viewer.ext.rpm</artifactId>
  <name>com.ibm.docs.viewer.ext.rpm - rpm</name>
  <packaging>pom</packaging>

  <properties>
    <rpm.file.prefix>SC-Docs-Ext</rpm.file.prefix>
  </properties>   

  <dependencies>
    <dependency>
      <groupId>com.ibm.docs.SmartCloud</groupId>
      <artifactId>com.ibm.concord.lcfiles.extension.provision</artifactId>
      <version>${project.version}</version>
    </dependency>
    <dependency>
      <groupId>com.ibm.docs.SmartCloud</groupId>
      <artifactId>com.ibm.concord.viewer.lcfiles.extension.provision</artifactId>
      <version>${project.version}</version>
    </dependency> 
    <dependency>
      <groupId>com.ibm.docs</groupId>
      <artifactId>com.ibm.docs.lcfiles.daemon</artifactId>
      <version>${project.version}</version>
    </dependency>
    <dependency>
      <groupId>com.ibm.docs</groupId>
      <artifactId>com.ibm.concord.viewer.lcfiles.daemon</artifactId>
      <version>${project.version}</version>
    </dependency>
    	<dependency>
		<groupId>com.ibm.docs</groupId>
		<artifactId>com.ibm.concord.viewer.gatekeeper</artifactId>
		<version>${project.version}</version>
		<type>jar</type>
	</dependency>
	<dependency>
		<groupId>org.slf4j</groupId>
		<artifactId>slf4j-api</artifactId>
	</dependency>
	<dependency>
		<groupId>com.ibm</groupId>
		<artifactId>json4j</artifactId>
	</dependency>
	<dependency>
		<groupId>org.apache.zookeeper</groupId>
		<artifactId>zookeeper</artifactId>
	</dependency>
	<dependency>
		<groupId>com.ibm</groupId>
		<artifactId>registryLib</artifactId>
	</dependency>
	<dependency>
		<groupId>com.ibm</groupId>
		<artifactId>shared.gatekeeper</artifactId>
	</dependency>
	<dependency>
		<groupId>org.bouncycastle145</groupId>
		<artifactId>bcprov</artifactId>
	</dependency>     
  </dependencies>

  <!-- Only run RPM on Linux. -->
  <profiles>
    <profile>
      <id>unix</id>
      <activation>
        <os>
          <family>unix</family>
        </os>
      </activation>
      <build>
        <plugins>    
          <plugin>
            <artifactId>maven-assembly-plugin</artifactId>
            <executions>
              <execution>
                <id>build extension.zip</id>
                <phase>prepare-package</phase>
                <goals>
                  <goal>single</goal>
                </goals>
                <configuration>
                  <descriptors>
                    <descriptor>assembly_extension.zip.xml</descriptor>
                  </descriptors>
                  <finalName>extension</finalName>
                  <outputDirectory>${project.build.directory}/files/opt/ll/apps/docs/ext</outputDirectory>
                  <appendAssemblyId>false</appendAssemblyId>
                </configuration>
              </execution>
            </executions>
          </plugin>	
        </plugins>
      </build>
    </profile>   
  </profiles>    
</project>