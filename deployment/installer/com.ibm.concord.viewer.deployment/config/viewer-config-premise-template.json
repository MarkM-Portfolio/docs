				"en": [],
				"es": [],
				"fi": [],
				"fr": [],
				"it": [],
				"ja": [],
				"ko": [],
				"nl": [],
				"no": [],
				"pl": [],
				"pt": [],
				"pt-br": [],
				"ru": [],
				"sv": [],
				"th": [],
				"tr": [],
				"zh-cn": [],
				"zh-tw": []
			}
		},
		"Watermark":
		{
			"enabled": "false",
			"text_watermark":
			{
				"text":"CONFIDENTIAL",
				"font":"Arial",
				"size":"72",
				"color":"#D2D2D2",
				"diagonal": "true"
			}
		}
	},
	"WhiteDomainList": [
		"https://app.box.com"
	],
	"build-info" :
    {
        "product_name" : "HCL Connections Docs",
        "build_version" : "$build_version",
        "build_timestamp" : "$build_timestamp",
        "build_description" : "HCL Connections Docs $build_version"
    }
}
