<project name="com.ibm.concord.viewer.lcfiles.ext.deployment" basedir="." default="ext.deploy">
	<property name="installer.dir" value="installer"/>
	<property name="src.dir" value="src"/>
	<property name="bin.dir" value="bin"/>
	<property name="classes.dir" value="${bin.dir}/classes"/>

	<target name="ext.deploy">
		<mkdir dir="${build.home}/ext/installer"/>
		<copy todir="${build.home}/ext/installer">
			<fileset dir="${installer.dir}" includes="**/*"/>
		</copy>
		<echo file="${build.home}/ext/installer/version.txt">
	        {
	            "component_name" : "File Viewer", 
	            "build_version" :  "${build.version}" ,
	            "build_timestamp" : "${build.timestamp}" 
	        }
		</echo>

		<mkdir dir="${build.home}/ext/installer/Python"/>
		<unzip src="Python273.zip" dest="${build.home}/ext/installer/Python"></unzip>
  </target>
</project>

