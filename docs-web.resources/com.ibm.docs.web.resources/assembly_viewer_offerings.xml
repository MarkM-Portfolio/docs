<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
  <id>viewer_offerings</id>
  <formats>
    <format>zip</format>
  </formats>
  <includeBaseDirectory>false</includeBaseDirectory>
  <fileSets>
    <fileSet>
      <directory>${target.version.dir}</directory>
      <outputDirectory>./</outputDirectory>
      <includes>
        <include>js/concord/concord_pres*</include>
        <include>js/concord/nls/concord_pres*</include>
        <include>js/concord/concord_sheet_view*</include>
        <include>js/concord/concord_sheet_extras*</include>
        <include>js/concord/concord_sheet_widgets*</include>
        <include>js/concord/widgets/css/images/*</include>
        <include>js/concord/nls/concord_sheet_extras*</include>
        <include>js/concord/nls/concord_sheet_view*</include>
        <include>js/concord/nls/concord_sheet_widgets*</include>
        <include>js/dojo/</include>
        <include>js/dijit/</include>
        <include>js/dojox/</include>
        <include>js/wseditor/css/</include>
        <include>images/</include>
        <include>styles/</include>
        <include>js/concord/nls/concord_text*</include>
        <include>js/writer/css/concord_document.css</include>
        <include>js/concord/concord_text*</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>${webcontent.dir}</directory>
      <outputDirectory>./</outputDirectory>
      <includes>
        <include>jsp/header*</include>
        <include>jsp/footer*</include>
      </includes>        
    </fileSet>
    <fileSet>
      <directory>${project.build.directory}</directory>
      <outputDirectory>./js</outputDirectory>
      <includes>
        <include>viewer/</include>
      </includes>        
    </fileSet>    
