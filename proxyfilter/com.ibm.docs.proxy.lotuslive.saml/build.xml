<project name="com.ibm.docs.proxy.lotuslive.saml" basedir="." default="deploy">
	<property name="src.dir" value="src"/>
	<property name="bin.dir" value="bin"/>
	<property name="lib.dir" value="lib"/>
	<property name="meta.dir" value="META-INF"/>
	<property name="classes.dir" value="${bin.dir}/classes"/>
	<property name="jar.dir" value="${bin.dir}/jar"/>
	<property name="prereq-was.dir" value="../prereq-WAS_7.0/"/>
	<property name="prereq-was.plugin.dir" value="../prereq-was.plugin_7.0/"/>
	<property name="lib.output.dir" value="${build.home}/opensaml"/>
	<property name="report.dir" value="${build.home}/report"/>

	<path id="lib.classpath">
		<fileset dir="${lib.dir}" includes="*.jar"/>
	</path>
	<path id="was.classpath">
		<fileset dir="${prereq-was.dir}" includes="**/*.jar"/>
	</path>
	<path id="was.plugin.classpath">
		<fileset dir="${prereq-was.plugin.dir}" includes="**/*.jar"/>
	</path>
	<path id="findbugs.classpath">
		<fileset dir="${findbugs.home}/lib" includes="*.jar"/>
	</path>

	<echo message="FindBugs home is ${findbugs.home}, enable FindBugs is ${findbugs.enable}, build fail when finding bugs is ${findbugs.fail}."/>
	<taskdef name="findbugs" classname="edu.umd.cs.findbugs.anttask.FindBugsTask" classpathref="findbugs.classpath"/>

	<target name="clean">
		<delete dir="${bin.dir}"/>
		<delete dir="${lib.output.dir}"/>
	</target>
	<target name="compile" depends="clean">
		<mkdir dir="${classes.dir}"/>
		<javac srcdir="${src.dir}" destdir="${classes.dir}" source="${javac.source}" target="${javac.target}">
			<classpath refid="lib.classpath"/>
			<classpath refid="was.classpath"/>
			<classpath refid="was.plugin.classpath"/>
		</javac>
	</target>
	<target name="findbugs-condition" depends="compile">
		<condition property="enablefindbugs">
			<istrue value="${findbugs.enable}" />
		</condition>
	</target>
	<target name="findbugs" depends="findbugs-condition" if="enablefindbugs">
		<mkdir dir="${report.dir}"/>
		<findbugs home="${findbugs.home}" output="xml" outputFile="${report.dir}/${ant.project.name}.xml" warningsProperty="bugs.found">
			<auxClasspath refid="lib.classpath"/>
			<auxClasspath refid="was.classpath"/>
			<auxClasspath refid="was.plugin.classpath"/>
			<sourcePath path="${src.dir}" />
			<class location="${classes.dir}" />
		</findbugs>
		<condition property="build.fail">
			<and>
				<istrue value="${bugs.found}"/>
				<istrue value="${findbugs.fail}"/>
			</and>
		</condition>
		<fail if="build.fail" message="Find bugs in ${ant.project.name}, see ${report.dir}/${ant.project.name}.xml for details."/>
	</target>
	<target name="gather" depends="findbugs">
		<copy todir="${classes.dir}" failonerror="true" overwrite="true">
			<fileset dir="${src.dir}">
				<exclude name="**/*.java"/>
			</fileset>
		</copy>
	</target>
	<target name="jar" depends="gather">
		<mkdir dir="${jar.dir}"/>
		<jar destfile="${jar.dir}/${ant.project.name}.jar" basedir="${classes.dir}" filesetmanifest="merge" manifestencoding="UTF-8">
			<metainf dir="${meta.dir}"/>
		</jar>
	</target>
	<target name="deploy" depends="jar">
		<copy todir="${build.home}">
			<fileset dir="${jar.dir}"/>
		</copy>
		<mkdir dir="${lib.output.dir}"/>
		<copy todir="${lib.output.dir}">
			<fileset dir="${lib.dir}"/>
		</copy>
	</target>
</project>

