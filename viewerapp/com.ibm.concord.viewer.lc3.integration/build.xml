<project name="com.ibm.concord.viewer.lc3.integration" basedir="." default="findbugs">
	<property name="src.dir" value="src"/>
	<property name="bin.dir" value="bin"/>
	<property name="classes.dir" value="${bin.dir}/classes"/>
	<property name="jar.dir" value="${bin.dir}/jar"/>
	<property name="ear.dir" value="../com.ibm.concord.viewer.ear/"/>
	<property name="jar.path" value="${build.home}/${ant.project.name}.jar"/>

	<path id="project.classpath">
		<pathelement path="${build.home}/com.ibm.concord.viewer.platform.jar"/>
		<pathelement path="${build.home}/com.ibm.concord.viewer.spi.jar"/>
	</path>

	<path id="was.classpath">
		<fileset dir="${was.home}" includes="**/*.jar"/>
	</path>

	<path id="lib.classpath">
		<fileset dir="${ear.dir}/lib">
			<include name="**/com.ibm.connections.directory.services.jar" />
			<include name="**/commons-codec*.jar" />
			<include name="**/commons-configuration*.jar" />
			<include name="**/commons-configuration*plus-node-clone.jar" />
			<include name="**/commons-fileupload*.jar" />
			<include name="**/commons-httpclient*.jar" />
			<include name="**/commons-io*.jar" />
			<include name="**/commons-lang*.jar" />
			<include name="**/commons-pool*.jar" />
			<include name="**/abdera*incubating.jar" />
			<include name="**/jaxen*.jar" />
			<include name="**/json4j.jar" />
			<include name="**/commons-collections*.jar" />
			<include name="**/lc.customAuthClient.jar" />
			<include name="**/files.spi.client.jar" />
			<include name="**/files.spi.remote.jar" />
			<include name="**/tk.rproxysvc.client.jar" />
			<include name="**/tk.rproxysvc.transport.jar" />
			<include name="**/slf4j-api*.jar" />
			<include name="**/slf4j-jdk*.jar" />
			<include name="**/json*.jar" />
			<include name="**/log4j.jar" />
			<include name="**/jsoup-1.8.1.jar" />
			<include name="**/axiom-api-1.2.1.jar" />
			<include name="**/axiom-impl-1.2.1.jar" />
		</fileset>
	</path>

	<target name="clean">
		<delete dir="${bin.dir}"/>
	</target>
	<target name="compile" depends="clean">
		<mkdir dir="${classes.dir}"/>
		<javac srcdir="${src.dir}" destdir="${classes.dir}" debug="${build.debug}" debuglevel="${build.debuglevel}" source="${javac.source}" target="${javac.target}">
			<classpath refid="project.classpath"/>
			<classpath refid="lib.classpath"/>
			<classpath refid="was.classpath"/>
		</javac>
	</target>

	<target name="jar" depends="compile">
		<pathconvert property="manifest.project.classpath" pathsep=" ">
			<mapper>
				<chainedmapper>
					<flattenmapper/>
				</chainedmapper>
			</mapper>
			<path refid="project.classpath"/>
		</pathconvert>
		<pathconvert property="manifest.lib.classpath" pathsep=" ">
			<mapper>
				<chainedmapper>
					<flattenmapper />
					<globmapper from="*" to="lib/*" />
				</chainedmapper>
			</mapper>
			<path refid="lib.classpath" />
		</pathconvert>

		<mkdir dir="${jar.dir}" />
		<jar destfile="${jar.dir}/${ant.project.name}.jar" basedir="${classes.dir}">
			<manifest>
				<attribute name="Created-By" value="IBM"/>
				<attribute name="Class-Path" value="${manifest.project.classpath} ${manifest.lib.classpath}"/>
			</manifest>
		</jar>
	</target>
	<target name="deploy" depends="jar">
		<copy todir="${build.home}">
			<fileset dir="${jar.dir}"/>
		</copy>
	</target>
  <target name="findbugs" depends="deploy">
    <ant dir="${findbugs.home}" inheritAll="true"/>
  </target> 
</project>

