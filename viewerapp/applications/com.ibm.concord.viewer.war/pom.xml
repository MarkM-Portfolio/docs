  <profiles>
    <profile>
      <id>buildViewerJS</id>
      <activation>
        <activeByDefault>false</activeByDefault>
        <file>
          <exists>${basedir}/buildjs4maven.xml</exists>
        </file>
        <os>
          <family>unix</family>
        </os>        
      </activation>
      <build>
        <plugins>
          <plugin>
            <groupId>org.apache.maven.plugins</groupId>
            <artifactId>maven-dependency-plugin</artifactId>
            <executions>
              <execution>
                <id>copy docs build resources</id>
                <phase>prepare-package</phase>
                <goals>
                  <goal>copy</goal>
                </goals>
                <configuration>
                  <artifactItems>
                    <artifactItem>
                      <groupId>com.ibm.docs</groupId>
                      <artifactId>viewer_offerings</artifactId>
                      <version>${project.version}</version>
                      <type>zip</type>
                      <overWrite>true</overWrite>
                      <outputDirectory>${HTMLViewer.dir}</outputDirectory>
                      <destFileName>viewer_offerings.zip</destFileName>
                    </artifactItem>
                  </artifactItems>
                  <overWriteReleases>false</overWriteReleases>
                  <overWriteSnapshots>true</overWriteSnapshots>
                </configuration>
              </execution>
            </executions>        
          </plugin>
          <plugin>
            <groupId>org.apache.maven.plugins</groupId>
            <artifactId>maven-antrun-plugin</artifactId>
            <executions>
              <execution>
                <id>invoke ant task for viewer js build</id>
                <phase>prepare-package</phase>
                <configuration>
                  <target name="handle Docs resources">
                    <mkdir dir="${HTMLViewer.dir}"/>
                    <unzip src="${HTMLViewer.dir}/viewer_offerings.zip" dest="${HTMLViewer.dir}"/>
                    <move todir="${webcontent.dir}/jsp">
                      <fileset dir="${HTMLViewer.dir}/jsp">
                        <include name="header*" />
                        <include name="footer*" />
                      </fileset>
                    </move>
                    <ant antfile="buildjs4maven.xml"/>
                  </target>
                </configuration>
                <goals>
                  <goal>run</goal>
                </goals>
              </execution>
            </executions>
          </plugin>
          <plugin>
            <artifactId>maven-install-plugin</artifactId>
            <executions>
              <execution>
                <id>install JSTest.viewer.zip</id>
                <phase>install</phase>
                <goals>
                  <goal>install-file</goal>
                </goals>
                <configuration>
                  <file>${project.build.directory}/JSTest.zip</file>
                  <groupId>com.ibm.docs</groupId>
                  <artifactId>JSTest.viewer</artifactId>
                  <packaging>zip</packaging>
                  <version>${project.version}</version>    
                </configuration>            
              </execution>         
            </executions>
          </plugin>
        </plugins>
      </build>        
    </profile>    
  </profiles>
  
